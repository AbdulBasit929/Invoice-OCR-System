# .env.example for Backend

# Server Configuration
NODE_ENV=development
PORT=4000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/invoice_db?authSource=admin
MONGODB_TEST_URI=mongodb://localhost:27017/invoice_test_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# OCR API Configuration
OCR_API_URL=http://localhost:5000
OCR_API_TIMEOUT=120000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/png,image/jpeg,image/jpg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@invoiceocr.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Redis (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Batch Processing
BATCH_PROCESSING_SIZE=10
BATCH_TIMEOUT=300000

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

